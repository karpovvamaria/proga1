#include <stdio.h>

int main() {
    int number1, number2, number3;
    float eatingTime;
    
    printf("Введіть три значення:\n");
    scanf("%d %d %d", &number1, &number2, &number3);
    
    eatingTime = 1.0 / ((1.0 / number1) + (1.0 / number2) + (1.0 / number3));

    printf("\nЧас, необхідний для з'їдання пирога: %.2f годин\n", eatingTime);

    return 0;
}
