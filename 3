#include <stdio.h>

// Рекурсивна функція для підрахунку кількості чисел з розрядами, що задовольняють умову
int countNumbers(int r, int prev, int prevPrev) {
    if (r == 0) {
        return 1; // Базовий випадок: досягнуто кінця розрядів, повертаємо 1
    }

    int count = 0;

    // Перебираємо всі можливі цифри 5 та 9
    for (int digit = 5; digit <= 9; digit += 4) {
        if (digit != prev || digit != prevPrev) {
            // Рекурсивно викликаємо функцію для наступного розряду з оновленими значеннями попередніх розрядів
            count += countNumbers(r - 1, digit, prev);
        }
    }

    return count;
}

int main() {
    int r;
    
    // Ввід числа розрядів
    printf("Введіть кількість розрядів р: ");
    scanf("%d", &r);

    // Підрахунок кількості чисел
    int result = countNumbers(r, -1, -1);

    // Виведення результату
    printf("Кількість чисел з %d розрядами: %d\n", r, result);

    return 0;
}
